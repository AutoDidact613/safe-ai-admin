# Development Dockerfile

FROM node:20

# 转拽转 注
WORKDIR /app



# 转拽转 转注转 注专转
RUN apt-get update && apt-get install -y ca-certificates

# 住驻转 转注转 驻专
COPY certs/netfree-ca.crt /usr/local/share/ca-certificates/netfree-ca.crt
RUN update-ca-certificates



#  拽专 -Node
ENV NODE_EXTRA_CA_CERTS=/usr/local/share/ca-certificates/netfree-ca.crt

# 注转拽 专拽 package.json  转拽 转转
COPY package*.json ./

# 转拽 转转
RUN npm install

# 专专转  专爪 (dev mode)
CMD ["npm", "run", "dev"]